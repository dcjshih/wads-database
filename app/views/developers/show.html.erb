<div class="container mx-auto">
  <div class="block text-center" style="color: green"><%= notice %></div>
  <% if user_signed_in? %>
    <% if current_user.has_role? :admin%>
      <div class="mx-16 pb-8">
        <button class="secondary_yellow_button py-2">
          <%= link_to "Edit this developer", edit_developer_path(@developer) %>
        </button>
      </div>
    <% end %>
  <% end %>
  <div class="flex flex-row justify-center">
    <div><%= render @developer %></div>
  </div>
</div>
